<div class="alert alert-success"><a href='#' class='close' data-dismiss='alert' aria-label='close' >&times;</a> Incompleted Todos <i class="fa fa-calendar"></i></div>   

<form action="/admin/todos/multiaction" method="post" class="multiOperationFORM">

<div class="form-group multi_action col-md-4">
  <div class="row">
    <div class="col-md-6">
        <select name="action" id="" class="form-control">
          <option value="delete">Delete Records</option>
          <option value="complete">Completed Todos</option>


      </select>
    </div>

    <div class="col-md-6">
      <button type="submit" class="btn btn-success multi_action"><i class="fa fa-thumbs-up"></i> Perform Operation</button>
    </div>
  </div>
  
</div>


<table class="table table-striped table-responsive responsive-table">
    <thead>
       <tr>
        <th><input type="checkbox"  id="checkbox"></th>
           <th>Subject</th>
           <th>Capture</th>
           <th>Note</th>
           <th>Status</th>
           <th>Completed</th>
           <th>Actions</th>
       </tr>
    </thead>

    <tbody>
     {{#if todos}}
      
        {{#each todos}}
                <tr>
                     <td><input type="checkbox" name="checkboxes[]"  value="{{id}}" class="checkboxes"></td>
</form>
                    <td>{{subject}}</td>
                     {{#if file}}
                        <td><img src="/uploads/{{file}}" class="img-circle" alt="" width="50"></td>
                        {{else}}
                        <td><img src="/uploads/image-place.png" alt="" width="50"></td>
                    {{/if}}
                    <td>{{note}}</td>
                     <td>
                        <input type="checkbox" id="{{slug}}" value="" {{#if status}} checked {{/if}} name="status" class="appStatus">
                    </td>

                     <td>
                        <input type="checkbox" id="{{slug}}" value="" {{#if completion_status}} checked {{/if}} name="completion_status" class="appComplete">
                    </td>
                    <td><a href="/admin/todos/edit/{{slug}}" class="btn btn-success"><i class="fa fa-pencil"></i></a></td>
                    <td><a href="/admin/todos/show/{{slug}}" class="btn btn-info"><i class="fa fa-eye"></i></a></td>
                     <td>
                      <form action="/admin/todos/delete/{{slug}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i></button>
                      </form>
                    </td>
                   
                </tr>
        {{/each}}

      {{else}}
        <div class="alert alert-danger"> <a href='#' class='close' data-dismiss='alert' aria-label='close' >&times;</a>No Todos to display</div>
       

     {{/if}}      
    </tbody>
</table>




<style>
  .multi_action{
    display: none;
  }
</style>

