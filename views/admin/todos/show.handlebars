<div class="container">
<div class="center-algin text-center justify-content-center m-5 mx-auto">
<div class="row">
    <div class="col-md-5">
        {{#if todo.file}}
            <img src="/uploads/{{todo.file}}" width="250" class="img-circle" alt="">
            {{else}}
            <img src="/uploads/image-place.png" alt="">
        {{/if}}

    </div>

    <div class="col-md-5 mt-2">
        <table class="table table-striped table-responsive">
            <tr>
                <th>Subject</th>
                <td>{{todo.subject}}</td>
            </tr>

            <tr>
                <th>Note</th>
                <td>{{todo.note}}</td>
            </tr>

            <tr>
                <th>Status</th>
                <td>{{todo.status}}</td>
            </tr>

            <tr>
                <th>Edit todo</th>
                <td> <a href="/admin/todo/edit/{{todo.id}}" class="btn btn-success"><i class="fa fa-pencil"></i> Edit todo</a></td>
            </tr>
        </table>
    </div>
</div>
</div>
   

</div>