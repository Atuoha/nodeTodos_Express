<div class="container">
<div class="center-algin text-center justify-content-center m-5 mx-auto">
<div class="row">
    <div class="col-md-5">
        {{#if user.file}}
            <img src="/uploads/{{user.file}}" width="250" class="img-circle" alt="">
            {{else}}
            <img src="/uploads/default.png" alt="">
        {{/if}}

    </div>

    <div class="col-md-5 mt-2">
        <table class="table table-striped table-responsive">
            <tr>
                <th>Full Name</th>
                <td>{{user.name}}</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>{{user.email}}</td>
            </tr>


            <tr>
                <th>Phone</th>
                <td>{{user.phone}}</td>
            </tr>


            <tr>
                <th>Role</th>
                <td>{{user.role}}</td>
            </tr>

            <tr>
                <th>Status</th>
                <td>{{user.status}}</td>
            </tr>

            <tr>
                <th>Edit user</th>
                <td> <a href="/admin/users/edit/{{user.id}}" class="btn btn-success"><i class="fa fa-pencil"></i> Edit User</a></td>
            </tr>

            <tr>
                <th>Delete user</th>
                <td> <a href="/admin/users/delete/{{user.id}}" class="btn btn-danger"><i class="fa fa-remove"></i> Delete User</a></td>
            </tr>
        </table>
    </div>
</div>
</div>
   

</div>